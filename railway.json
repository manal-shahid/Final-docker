{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs", "npm"]
        },
        "install": {
          "cmds": ["npm install"]
        },
        "build": {
          "cmds": ["npm run build || echo 'no build step'"]
        },
        "start": {
          "cmds": ["node index.js"]
        }
      },
      "start": "node backend/index.js"
    }
  }
}
